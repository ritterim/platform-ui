{
  "name": "@ritterim/platform-ui",
  "version": "1.6.2",
  "description": "A CSS framework used by Ritter Insurance Marketing (RIM) for our platform of agent tools.",
  "homepage": "https://style.rimdev.io",
  "main": "gulpfile.js",
  "files": [
    "/dist",
    "/src",
    "/main.js",
    "/README.md",
    "/package.json",
    "/vite.config.js",
    "/.fantasticonrc.js",
    "/index.html"
  ],
  "scripts": {
    "start": "npm-run-all build:svgs build:font start:vite",
    "build": "npm-run-all build:*",
    "build:svgs": "svgo -f ./src/icons/svg/ -o ./src/icons/optimized",
    "build:font": "fantasticon",
    "start:vite": "vite",
    "build:vite": "vite build",
    "preview:vite": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "ver": "echo \"$npm_package_version\"",
    "deploy": "./deploy-to-npm.sh"
  },
  "browserslist": [
    "last 2 version",
    "> 2%",
    "maintained node versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ritterim/platform-ui.git"
  },
  "keywords": [
    "CSS",
    "SASS",
    "UI"
  ],
  "author": "Ritter Insurance Marketing (https://rimdev.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ritterim/platform-ui/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "autoprefixer": "^9.8.8",
    "fantasticon": "^1.2.3",
    "normalize.css": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.11",
    "rollup-plugin-copy": "^3.4.0",
    "sass": "^1.55.0",
    "svgo": "^3.0.0",
    "vite": "^3.2.1",
    "vite-plugin-banner": "^0.5.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "entry",
          "corejs": 2,
          "targets": {
            "browsers": [
              "last 2 versions",
              "ie >= 11"
            ]
          }
        }
      ]
    ]
  },
  "dependencies": {
    "semver": "^6.3.0"
  }
}
