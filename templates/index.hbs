<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
  <meta charset="utf-8">
  <title>Style Guide | Ritter Insurance Marketing </title>

  <meta name="description" content="">
  <meta name="generator" content="kss-node">
  <meta name="viewport" content="width=device-width">

  <link href="https://fonts.googleapis.com/css?family=Nunito+Sans|Roboto|Inconsolata&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="site-assets/stylesheets/platform-ui.min.css">
  {{{styles}}}

  <link rel="apple-touch-icon" sizes="180x180" href="site-assets/images/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="site-assets/images/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="96x96" href="site-assets/images/favicon/favicon-96x96.png">
  <link rel="icon" type="image/png" sizes="16x16" href="site-assets/images/favicon/favicon-16x16.png">
  <link rel="manifest" href="site-assets/images/favicon/site.webmanifest">
  <link rel="mask-icon" href="site-assets/images/favicon/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#ffffff">
</head>
<body id="kss-node" class="overflow-x--hidden{{#if template.isHomepage}} background-lighter{{/if}}">
  <header class="site-header site-header--fixed border-b border--color-skyblue flex flex--justify-between background-white">
    <div class="flex flex--justify-start pl-3">
      <a class="flex w-50" href="/">
        <img class="w-100" src="site-assets/images/svg/RitterInsuranceLogo.svg" alt="Ritter Insurance Marketing">
      </a>
    </div>
    <nav class="site-menu site-menu--bordered background-white text-navy">
      <a class="site-menu__item h-100 flex--align-center text--bold text-navy border-l border--color-light" href="https://docs.ritterim.com">
        <img class="icon--svg-small" src="site-assets/images/svg/ritter-docs.svg" alt="">
        Ritter Docs
      </a>
      <a class="site-menu__item h-100 flex--align-center text--bold text-navy px-3 border--color-light" href="https://ritterim.com">
        <img class="icon--svg-small" src="site-assets/images/svg/ritter-website.svg" alt="">
        Ritterim.com
      </a>
    </nav>
  </header>

  
  <div class="block-container{{#unless template.homepage}} flex--justify-end{{/unless}} header-fixed overflow-hidden{{#if homepage}} flex--justify-center{{/if}}">
    {{#if homepage}}
    <div 
      class="animated slideInDown fast flex--center-content flex--column pt-6 p-3 background-image linear-gradient block" 
      data-gradient-direction="to right"
      data-gradient-start="var(--white)"
      data-gradient-stop="transparent"
      data-gradient-fallback="var(--white)"
      data-background-image="site-assets/images/style-guide-background.jpg">
      <h1 class="my-4">Welcome to the Platform UI Style Guide</h1>
      <p>Platform UI is the CSS framework we've developed to maintain the Ritter Platform of agent tools.</p>
      <a href="/section-_getting-started.html" class="button button--post button--lg">Get Started v{{ options.version }}</a>
    </div>
    {{/if}}
    {{#unless template.isHomepage}}
    <aside class="block block-3 laptop-up-3 desktop-up-2 border-r border--color-lighter pos-fix pin-left h-100">
      <nav class="h-100 overflow-y--scroll pb-7" aria-label="Style Guide">
        <ul class="list">
          <li class="list__item mb-0">
            <a class="flex p-3 pos-rel{{#unless template.homepage}} hover-scale text-base{{/unless}}{{#if template.isHomepage}} background-skyblue text-navy text--bold{{/if}}" href="./">
              <strong>Home v{{ options.version }}</strong>
              <i class="pos-abs pin-right pin-center-top mr-3 fad pi-house"></i>
            </a>
          </li>
        {{#each menu}}
          <li class="list__item mb-0">
            <a class="flex p-3 pos-rel{{#unless isActive}} hover-scale text-base{{/unless}}{{#if isActive}} background-skyblue text-navy text--bold{{/if}}" href="section-{{referenceURI}}.html">
              <strong>{{referenceNumber}}</strong><span class="ml-2">{{header}}</span>
              <i class="pos-abs pin-right pin-center-top mr-3 fal pi-angle-down text--size-xl{{#if isActive}} rotate-180{{/if}}"></i>
            </a>
            {{#if isActive}}
              {{#if children}}
                <ul class="list pl-1 background-lighter style-nav__child-list">
                {{#each children}}
                  <li class="mb-0">
                    <a class="flex px-3 py-3 hover-scale text-base" href="section-{{../referenceURI}}.html#{{referenceURI}}">
                      <strong>{{referenceNumber}}</strong><span class="ml-2">{{header}}</span>
                    </a>
                  </li>
                {{/each}}
                </ul>
              {{/if}}
            {{/if}}
          </li>
        {{/each}}
        </ul>
      </nav>
    </aside>
  {{/unless}}
    <main class="pb-4 header-fixed block{{#if homepage}} block-10 desktop-up-8 py-4{{/if}} {{#unless homepage}}px-4 background-white block-9 desktop-up-10{{/unless}}" aria-label="Content">
    
      {{#if template.isHomepage}}
        {{#if homepage}}
          <div id="0" class="w-100">
            <!-- {{{homepage}}} -->
            <div class="block-container blocks p-2 tablet-up-3 laptop-up-4">

              {{#each menu}}
                <div class="block{{#if isActive}} active{{/if}}">
                  <a class="card h-100 flex--center-content flex--column rounded-1 text-salmon--hover" href="section-{{referenceURI}}.html">
                    <img class="py-2" src="site-assets/images/svg/{{header}}.svg" alt="">
                    <span class="py-1">{{header}}</span>
                    <span class="py-1">Learn More <i class="arrow-right"></i><i class="angle-right"></i></span>
                  </a>
                </div>
              {{/each}}
            </div>
          </div>
        {{/if}}
      {{else}}

      {{!
        Display each section, in order.

        The "root" element comes first in this loop, and can be detected using
        the "#if @first" block as seen below.
      }}
      {{#each sections}}
        <div id="{{referenceURI}}" class="pb-3 page-anchor-target{{#unless @last}} mb-6{{/unless}}{{#unless @first}} border-b border--color-lighter{{/unless}}{{#if @last}} no-border{{/if}} {{#if @root.template.isItem}}is-fullscreen{{/if}}">
          <h{{#if @first}}1{{else}}2{{/if}} class="style-title {{#if @first}}text--bold text--size-xxl mt-0{{/if}} mb-3">
            <a class="style-title__permalink {{#if @first}} text-navy{{else}} text-dark{{/if}}" href="#{{referenceURI}}">
              <div class="style-title__ref text-base text--size-xxs">
                Section {{referenceNumber}}
                <span class="style-title__permalink-hash text-light">
                  {{#if @root.hasNumericReferences}}
                    #permalink
                  {{else}}
                    #{{reference}}
                  {{/if}}
                </span>
              </div>
              {{header}}
            </a>
            <hr class="w-25 background-orange" style="height: .3rem;">
          </h{{#if @first}}1{{else}}2{{/if}}>

          {{#if description}}
            <div class="style-description code-block--inline">
              {{{description}}}
            </div>
          {{/if}}

          {{#if colors }}
            <ul class="list block-container tablet-up-3 laptop-up-4 blocks p-2">
              {{#each colors}}
                <li class="block">
                  <figure class="h-100 background-white border border--color-lighter m-0 p-0">
                    <div style="background-color:{{color}}; height: 3em;"></div>
                    <figcaption class="p-2 flex flex--column">
                      <strong class="text--bold text-dark">{{name}}</strong>
                      {{color}}
                    </figcaption>
                  </figure>
                </li>
              {{/each}}
            </ul>
          {{/if}}

          {{#if parameters}}
            <div class="kss-parameters__title">Parameters:</div>
            <ul class="kss-parameters">
            {{#each parameters}}
              <li class="kss-parameters__item">
                <div class="kss-parameters__name"><code>{{name}}</code></div>
                <div class="kss-parameters__description">
                  {{{description}}}
                  {{#if defaultValue}}
                    <div class="kss-parameters__default-value">
                      Defaults to: <code>{{defaultValue}}</code>
                    </div>
                  {{/if}}
                </div>
              </li>
            {{/each}}
            </ul>
          {{/if}}

          {{#if example}}
            <div class="my-4">
              <h4 class="text--bold mb-3">
                Example:{{#if modifiers}}s{{/if}}
              </h4>

              {{#if modifiers}}
                <div class="text--bold mb-4">
                  Default styling
                </div>
              {{/if}}

              <div class="style-modifier__example">
                {{{example}}}
                <div class="style-modifier__example-footer"></div>
              </div>

              {{#each modifiers}}
                <div class="style-modifier__name">
                  {{name}}
                </div>
                <div class="style-modifier__description mb-4">
                  {{{description}}}
                </div>
                <div class="style-modifier__example">
                  {{{markup}}}
                </div>
              {{/each}}
            </div>

            {{#if markup}}
              <h4 class="mb-3">
                Markup:
              </h4>
              <details class="style-markup mb-4" open>
                <summary class="hidden">
                  {{#if markupFile }}
                    Markup: <code>{{markupFile}}</code>
                  {{else}}
                    Markup
                  {{/if}}
                </summary>
                <pre class="hljs html m-0"><code class="language-handlebars">{{{hljs markup 'handlebars'}}}</code></pre>
              </details>
            {{/if}}
          {{/if}}

          {{#if source.filename}}
            <div>
              Source: <code>{{source.filename}}</code>, line {{source.line}}
            </div>
          {{/if}}

        </div>
      {{/each}}
    {{/if}}
    </main>
  {{#unless template.isHomepage}}
  </div>
  {{/unless}}

  <!-- SCRIPTS -->

  <script src="site-assets/js/platform-ui.min.js"></script>
  <script>
    {{!-- Specific JS for tables. Markdown does not
    support adding classes --}}
    var table = document.querySelectorAll('table');
    if(table) {
      table.forEach(function(el) {
        el.classList.add('table');
      });
    }

  </script>
  {{{scripts}}}

</body>
</html>
